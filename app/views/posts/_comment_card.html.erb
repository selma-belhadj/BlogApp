<section class="user-section-card ">
  <div class="user-section-card comment-owner">
        <% if post.comments_counter == 0 %>
            <p>This post does not have any comments</p>
        <% else %>
             <% post.five_recent_comments.each do |comment|  %>
                <ul class="user-details">
                    <li ><%= comment.user.name %>: <%= comment.text %>
                     <% if can? :destroy, comment  %>
                        <%= button_to 'Delete', user_post_comment_path(post_id: comment.post.id, id: comment.id), method: :delete, class: 'btn btn-danger' %> 
                     <% end %>
                    </li>
                </ul>
            <% end %>
        <% end %>
    </div>
</section>
